{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "REVALIDATE_TOKEN",
        "NEXT_PUBLIC_GA_TAG",
        "NEXT_PUBLIC_API_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_APP_ENV",
        "NEXT_PUBLIC_AUTHORIZATION_TOKEN",
        "NEXT_PUBLIC_TILESERVER_URL"
      ],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
